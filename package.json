{
  "name": "act-rotation-trainer",
  "version": "1.0.0",
  "description": "A very simple and basic Typescript Starter boilerplate template based on npm",
  "author": "Savas Ziplies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sarodarya/act-rotation-trainer"
  },
  "bugs": "https://github.com/sarodarya/act-rotation-trainer/issues",
  "keywords": [
    "act",
    "rotation",
    "trainer",
    "ffxiv"
  ],
  "scripts": {
    "start": "run-s watch",
    "build": "run-s build:*",
    "serve": "browser-sync start -s \"dist\" -f \"dist\"",
    "build:assets": "copyfiles --verbose -u 1 \"src/**/*.js\" \"src/**/*.json\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif}\" dist",
    "build:scss": "node-sass --output-style compressed -r src -o dist",
    "build:tsc": "tsc",
    "watch:tsc": "tsc -w",
    "watch:scss": "onchange \"src/**/*.scss\" -- run-s build:scss",
    "watch:assets": "onchange \"src/**/*.js\" \"src/**/*.json\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif}\" -- run-s build:assets",
    "watch": "run-p serve watch:*"
  },
  "devDependencies": {
    "axios": "^0.21.1",
    "axios-rate-limit": "^1.3.0",
    "browser-sync": "^2.26.14",
    "copyfiles": "^2.4.1",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "typescript": "^4.3.2"
  }
}
